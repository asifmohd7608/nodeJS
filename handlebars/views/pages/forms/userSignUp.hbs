<form action="/signup/user" method="post" class="admin_signup_form">
  <h2>Sign Up</h2>
  <label for="email">Enter Mail Id</label>
  <input type="text" id="email" name="Email" value="{{formData.Email}}" />
  {{#if errors.Email}}
    <span class="error_msg">{{errors.Email.msg}}</span>
  {{/if}}
  <label for="firstname">First Name</label>
  <input
    type="text"
    id="firstname"
    name="First_Name"
    value="{{formData.First_Name}}"
  />
  {{#if errors.First_Name}}
    <span class="error_msg">{{errors.First_Name.msg}}</span>
  {{/if}}
  <label for="lastname">Last Name</label>
  <input
    type="text"
    id="lastname"
    name="Last_Name"
    value="{{formData.Last_Name}}"
  />
  {{#if errors.Last_Name}}
    <span class="error_msg">{{errors.Last_Name.msg}}</span>
  {{/if}}
  <label for="address">Enter Address</label>
  <input type="text" name="Address" id="address" value="{{formData.Address}}" />
  {{#if errors.Address}}
    <span class="error_msg">{{errors.Address.msg}}</span>
  {{/if}}
  <label for="mobNo">Enter Mobile No.</label>
  <input type="text" name="Mobile" id="mobNo" value="{{formData.Mobile}}" />
  {{#if errors.Mobile}}
    <span class="error_msg">{{errors.Mobile.msg}}</span>
  {{/if}}
  <label for="city">Enter City</label>
  <input type="text" name="City" id="city" value="{{formData.City}}" />
  {{#if errors.City}}
    <span class="error_msg">{{errors.City.msg}}</span>
  {{/if}}
  <label for="password">Enter Password</label>
  <input type="password" id="password" name="Password" />
  {{#if errors.Password}}
    <span class="error_msg">{{errors.Password.msg}}</span>
  {{/if}}
  <button type="submit">sign up</button>
</form>